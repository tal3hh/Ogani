@model (Advert Advertdto, List<Advert> Advertlist)

@{ int count = 1; }

<div class="row">
    <div class="col-md-5 grid-margin stretch-card">
        <div class="card">
            <div class="card-body d-flex flex-column">
                <h4 class="card-title">Adverts Yenilemek</h4>
                <form asp-action="Update" asp-controller="Advert" asp-area="AdminPanel" class="forms-sample" method="post" enctype="multipart/form-data">
                   <input  asp-for="@Model.Advertdto.Id" type="hidden"/>
                    <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Foto :</label>
                                <div class="col-sm-9">
                                    <input asp-for="@Model.Advertdto.Photo" class="form-control" >
                                    <span asp-validation-for="@Model.Advertdto.Photo" class="text-danger"></span>
                                </div>
                    </div>
                    <button type="submit" class="btn btn-success mr-2">Submit</button>
                    <a asp-action="List" asp-controller="Advert" asp-area="AdminPanel" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-7 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Adverts</h4>
                <div class="mt-auto">
                    <div class="table-responsive">
                            <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Image</th>
                                    <th>Tarix</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var AdvertDto in Model.Advertlist)
                                {
                    <tr>
                        <td>@count</td>
                        <td class="py-1">
                        <img src="~/AdminPanel/img/advert/@AdvertDto.Image" class="mr-2" alt="image">
                        </td>
                        <td>@AdvertDto.CreatedDate.ToString("MMM dd")</td>
                        <td>
                            <a asp-action="Update" asp-controller="Advert" asp-area="AdminPanel" asp-route-id="@AdvertDto.Id"><i class="bi bi-pencil-square"></i></a>
                            <a asp-action="Delete" asp-controller="Advert" asp-area="AdminPanel" asp-route-id="@AdvertDto.Id"><i class="bi bi-x-square"></i></a>
                        </td>
                    </tr>count++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>