@model List<Contact>
@{
    var count = 1;
}


<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4>Elaqeler</h4>

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>
                                    Istifadeci
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Tarix
                                </th>
                                <th>
                                    Mesaj
                                </th>
                                 <th>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        @(item.Name == null? "---" : item.Name)
                    </td>
                    
                    <td>
                        @(item.Email == null? "---" : item.Email)
                    </td>
                    <td>
                        @item.CreatedDate.ToString("dd MMM")
                    </td>
                    <td>
                        @(item.Message == null? "---" : item.Message)
                    </td>

                    <td>
                        <a asp-action="Delete" asp-controller="Contact" asp-area="AdminPanel" asp-route-id="@item.Id"><i class="bi bi-x-square"></i></a>
                    </td>
                </tr>count++;
                            }
                        </tbody>
                    </table>

                </div>
            </div>
            </div>
            </div></div>