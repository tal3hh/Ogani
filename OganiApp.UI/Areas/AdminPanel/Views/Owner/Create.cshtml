@model (Owner Ownerdto, List<Owner> Ownerlist)

@{ int count = 1; }


<div class="row">
    <div class="col-md-5 grid-margin stretch-card">
        <div class="card">
            <div class="card-body d-flex flex-column">
                <h4 class="card-title">Yeni Owner Elave Et</h4>
                <form asp-action="Create" asp-controller="Owner" asp-area="AdminPanel" class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group row">
                        <label asp-for="@Model.Ownerdto.Fullname" class="col-sm-3 col-form-label">Fullname</label>
                        <div class="col-sm-9">
                            <input asp-for="@Model.Ownerdto.Fullname" class="form-control" id="exampleInputEmail2" placeholder="Fullname yazin...">
                            <span asp-validation-for="@Model.Ownerdto.Fullname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.Ownerdto.Profession" class="col-sm-3 col-form-label">Profession</label>
                        <div class="col-sm-9">
                            <input asp-for="@Model.Ownerdto.Profession" class="form-control" id="exampleInputEmail2" placeholder="Profession yazin...">
                            <span asp-validation-for="@Model.Ownerdto.Profession" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Foto :</label>
                                <div class="col-sm-9">
                                    <input asp-for="@Model.Ownerdto.Photo" class="form-control" >
                                    <span asp-validation-for="@Model.Ownerdto.Photo" class="text-danger"></span>
                                </div>
                     </div>
                    <button type="submit" class="btn btn-success mr-2">Submit</button>
                    <a asp-action="List" asp-controller="Owner" asp-area="AdminPanel" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-7 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Owner</h4>
                <div class="mt-auto">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Image</th>
                                    <th>Fullname</th>
                                    <th>Profession</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var OwnerDto in Model.Ownerlist)
                                {
                    <tr>
                        <td>@count</td>
                        <td class="py-1">
                        <img src="~/AdminPanel/img/owner/@OwnerDto.Image" class="mr-2" alt="image">
                        </td>
                        <td>@OwnerDto.Fullname</td>
                        <td>@OwnerDto.Profession</td>
                        <td>@OwnerDto.CreatedDate.ToString("MMM dd")</td>
                        <td>
                            <a asp-action="Update" asp-controller="Owner" asp-area="AdminPanel" asp-route-id="@OwnerDto.Id"><i class="bi bi-pencil-square"></i></a>
                            <a asp-action="Delete" asp-controller="Owner" asp-area="AdminPanel" asp-route-id="@OwnerDto.Id"><i class="bi bi-x-square"></i></a>
                        </td>
                    </tr>count++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>