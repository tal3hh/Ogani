@model List<Favorite>

@section style{
    <!-- Css Styles -->
    <link rel="stylesheet" href="~/MemberPanel/assets2/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/MemberPanel/assets2/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/MemberPanel/assets2/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="~/MemberPanel/assets2/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/MemberPanel/assets2/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="~/MemberPanel/assets2/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/MemberPanel/assets2/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/MemberPanel/assets2/css/style.css" type="text/css">

}

<!-- Shoping Cart Section Begin -->
    <section class="shoping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th class="shoping__product">Mehsullar</th>
                                    <th>Qiymet</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                       {
                                           <tr>
                                              <td class="shoping__cart__item">
                                                  <img src="~/AdminPanel/img/product/@item.Image" style="width:130px" alt="">
                                                  <h5>@item.ProductName</h5>
                                              </td>
                                              <td class="shoping__cart__price">
                                                  $@item.Price
                                              </td>
                                              
                                              <td class="shoping__cart__item__close">
                                                  <a asp-action="FavoriteRemove" asp-controller="Home" asp-route-id="@item.Id">
                                                      <span class="icon_close"></span>
                                                  </a>
                                              </td>
                                           </tr>
                                
                                       }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Shoping Cart Section End -->


@section scripts {

    <script asp-append-version="true" src="~/MemberPanel/assets2/js/jquery-3.3.1.min.js"></script>
    <script asp-append-version="true" src="~/MemberPanel/assets2/js/bootstrap.min.js"></script>
    <script asp-append-version="true" src="~/MemberPanel/assets2/js/jquery.nice-select.min.js"></script>
    <script asp-append-version="true" src="~/MemberPanel/assets2/js/jquery-ui.min.js"></script>
    <script asp-append-version="true" src="~/MemberPanel/assets2/js/jquery.slicknav.js"></script>
    <script asp-append-version="true" src="~/MemberPanel/assets2/js/mixitup.min.js"></script>
    <script asp-append-version="true" src="~/MemberPanel/assets2/js/owl.carousel.min.js"></script>
    <script asp-append-version="true" src="~/MemberPanel/assets2/js/main.js"></script>

}